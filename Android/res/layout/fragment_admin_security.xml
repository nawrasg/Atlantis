<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/swtSecurityAdminStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Sécurité" />

        <Switch
            android:id="@+id/swtSecurityAdminAlarmStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Alarme" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="15dp"
            card_view:contentPadding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:drawableRight="@drawable/ng_alert"
                    android:gravity="center_vertical"
                    android:text="Alarme"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminAlarmMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utiliser les capteurs de mouvement" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminAlarmReed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utiliser les capteurs d&apos;ouverture" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminAlarmTamper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Détecter l&apos;arrachement des capteurs" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="15dp"
            card_view:contentPadding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:drawableRight="@drawable/ng_thermostat"
                    android:gravity="center_vertical"
                    android:text="Température"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminFireStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Détecter le feu" />

                <TextView
                    android:id="@+id/lblSecurityAdminFireLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seuil de détection : NA°C" />

                <SeekBar
                    android:id="@+id/sbSecurityAdminFireLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="20dp"
                    android:background="@color/material_blue_grey_800" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminColdStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Détecter le froid" />

                <TextView
                    android:id="@+id/lblSecurityAdminColdLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seuil de détection : NA°C" />

                <SeekBar
                    android:id="@+id/sbSecurityAdminColdLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="15dp"
            card_view:contentPadding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:drawableRight="@drawable/ng_humidity"
                    android:gravity="center_vertical"
                    android:text="Humidité"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminHumidityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surveiller le taux d&apos;humidité" />

                <TextView
                    android:id="@+id/lblSecurityAdminHumidityHighLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borne haute : NA%" />

                <SeekBar
                    android:id="@+id/sbSecurityAdminHumidityHighLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <TextView
                    android:id="@+id/lblSecurityAdminHumidityLowLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borne basse : NA%" />

                <SeekBar
                    android:id="@+id/sbSecurityAdminHumidityLowLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="15dp"
            card_view:contentPadding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:drawableRight="@drawable/ng_lightning"
                    android:gravity="center_vertical"
                    android:text="Relais"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminRelayHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Désactiver les relais en présence d&apos;humidité" />

                <TextView
                    android:id="@+id/lblSecurityAdminRelayHumidityLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seuil de détection : NA%" />

                <SeekBar
                    android:id="@+id/sbSecurityAdminRelayHumidityLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="20dp"
                    android:background="@color/material_blue_grey_800" />

                <CheckBox
                    android:id="@+id/cbSecurityAdminRelayFire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Désactiver les relais en présence de feu" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>