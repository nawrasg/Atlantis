<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSensorIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="icon"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/lblSensorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgSensorIcon"
        android:layout_toRightOf="@id/imgSensorIcon"
        android:paddingTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblSensorDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lblSensorName"
        android:layout_below="@id/lblSensorName"/>

</RelativeLayout>