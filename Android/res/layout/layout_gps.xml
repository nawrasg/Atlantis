<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="30dp">
    
    <CheckBox android:id="@+id/cbGPSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activer la géolocalisation"
        android:layout_marginBottom="30dp" />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Définir le domicile :"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
   		
   		<EditText android:id="@+id/txtGPScoord"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:hint="Latitude / Longitude"
   		    android:layout_weight="0.75"
   		    android:editable="false" />"
   		<ImageButton android:id="@+id/btnGPSPosition"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_action_location_found"
		    android:onClick="sendCommand"
		    android:contentDescription="" />
    </LinearLayout>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Définir le périmètre :"
        android:layout_marginTop="30dp"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
   		
    	<EditText android:id="@+id/txtGPSradius"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:hint="En mètres"
   		    android:layout_weight="0.75"
   		    android:inputType="number"/>
    	<ImageButton android:id="@+id/btnGPSRadius"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_action_accept"
		    android:onClick="sendCommand"
		    android:contentDescription="" />    
    </LinearLayout>
    
    <Button android:id="@+id/btnGPSClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Effacer les données"/>
    
    	
</LinearLayout>
