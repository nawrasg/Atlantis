<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp" >

    <TextView
        android:id="@+id/txtPlantMAJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="Dernière mise à jour : NA" />

    <TextView
        android:id="@+id/txtPlantBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/battery"
        android:gravity="center_vertical"
        android:text="Batterie : NA" />

    <TextView
        android:id="@+id/txtPlantMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/humidity"
        android:gravity="center_vertical"
        android:text="Humidité : NA" />

    <TextView
        android:id="@+id/txtPlantLum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/sun"
        android:gravity="center_vertical"
        android:text="Luminosité : NA" />

    <TextView
        android:id="@+id/txtPlantTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ng_thermostat"
        android:gravity="center_vertical"
        android:text="Température : NA" />

</LinearLayout>